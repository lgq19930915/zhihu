@import '../../stylus/index.styl';

.collection {
    width 100vw;
    height 100vh;
    background #f1f1f1;

    .top_nav {
        box-sizing border-box;
        padding 0.3rem;
        width 100%;
        height 1rem;
        background $primary;

        .index {
            display inline-block;
            margin -0.1rem 0.3rem 0 0;
            width 0.4rem;
            height 0.4rem;
            background url('../../assets/font/xuanxiang.svg') no-repeat;
            background-size 100%;
            vertical-align middle;
        }

        .collection_num {
            color #fff;
        }
    }

    .con_inner {
        display flex;
        justify-content space-between;
        box-sizing border-box;
        margin 5%;
        padding 0.3rem;
        width 90%;
        background #fff;

        .inner_title {
            font-size 0.4rem;
        }

        .inner_img {
            img {
                width 2rem;
            }
        }
    }
}


.banner {
    margin-top 1.3rem;
    height 3rem;
    touch-action none;

    .am-carousel, .slider-frame, .slider-list, .slider-slide {
        height 100% !important;

        .title {
            position absolute;
            top 2rem;
            z-index 999;
            display block;
            margin-left 1rem;
            color #fff;
            font-size 0.4rem;
            opacity 0.8;
        }

        img {
            width 100%;
            height 100%;
            touch-action none;
        }
    }
}
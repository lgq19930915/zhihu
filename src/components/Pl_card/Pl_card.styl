.info {
    display flex;
    justify-content space-between;
    align-items top;
    padding 5vw 0;
    width 100vw;
    border-bottom 1px solid black;
    background #ffffff;
}

.info img {
    width 1rem;
    border-radius 50%;
}

.center_p2 {
    color #d2d2d2;
}

.info_left {
    padding-left 0.5rem;
    width 10vw;
}

.info_center {
    width 72vw;
}

.info_center h3 {
    margin 0.4rem;
    font-weight 900;
}

.info_center p {
    margin 0.3rem;
    line-height 1.2;
}

.info_right {
    width 15vw;
}
